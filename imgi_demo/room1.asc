// room script file
bool can_go_next_room;

function room_RepExec()
{
  ImGi.Begin(); 
    
  if(ImGi.BeginWindow("Hello World", 32, 32, 130, 60, eImGi_Opt_AlignCenter | eImGi_Opt_NoClose))
  {
    int rows[];
        
    rows = new int[1];
    rows[0] = 130;
    ImGi.LayoutRow(1, rows);
    
    if(can_go_next_room){
      if(ImGi.Button("Go to next room!")) player.ChangeRoom(2, 72, 143, eDirectionDown);
    }
    
    ImGi.Text("Welcome to ImGi!\nClick and drag the title header of this window to move it!");
           
    rows = new int[2];
    rows[0] = 60;
    rows[1] = 70;
    ImGi.LayoutRow(2, rows);
        
    if(ImGi.Button("Click Me!"))
    {
      player.Say("You clicked the button!");
      can_go_next_room = true;
    }    
  
    ImGi.EndWindow();
  }
    
  ImGi.End();  
}

