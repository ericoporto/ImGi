// room script file
CheckBoxState* chkbox;
ImGi_Real* myFloat, myFloat2;
String textBoxBuffer;

function room_RepExec()
{
  if(chkbox==null) chkbox = new CheckBoxState;
  if(myFloat==null) myFloat = new ImGi_Real;
  if(myFloat2==null) myFloat2 = new ImGi_Real;
  if(textBoxBuffer==null) textBoxBuffer = "";
  
  ImGi.Begin(); 
    
  if(ImGi.BeginWindow("My Window", 32, 32, 130, 60, eImGi_Opt_AlignCenter))
  {

    int rows[] = new int[2];
    rows[0] = 60;
    rows[1] = 70;
    ImGi.LayoutRow(2, rows);
    
    ImGi.Label("First:");
    if(ImGi.Button("Button1"))
    {
      player.Say("Button1 pressed!");  
    }
    
    ImGi.Label("Second:");
    if(ImGi.Button("Button2"))
    {
      //player.Say("Button2 pressed!");  
      ImGi.OpenPopup("popup1");
    } 
        
    ImGi.CheckBox("mycheck",chkbox);
    ImGi.Slider("Slider1", myFloat, 0.0, 4.0, 0.5);
    ImGi.Number("myFloat2", myFloat2, 0.4);
    textBoxBuffer = ImGi.TextBox("box",null, textBoxBuffer, 16);
    
    if(ImGi.BeginPopup("popup1"))
    {
      ImGi.Label("Hello World!");    
      ImGi.EndPopup();
    }
  
    ImGi.EndWindow();
  }
  
  
  ImGi.End();  
}

function modifyString (String s)
{
  s = s.Append("suffix");
}


function hGlowingOrb_AnyClick()
{
  String str = "prefix ";
  modifyString(str);
  Display(str);
}
